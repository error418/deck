{
  "name": "@swingletree-oss/deck",
  "description": "Swingletree webinterface",
  "repository": {
    "type": "git",
    "url": "git@github.com:swingletree-oss/deck.git"
  },
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "npm run build && node bin/main.js",
    "sass": "node-sass views/sass/main.scss -o static/css --output-style compressed",
    "sass:watch": "npm run sass -- -w",
    "build": "npm run sass && npm run build-ts && npm run tslint",
    "test": "ts-mocha --exit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "watch-debug": "nodemon --inspect bin/main.js",
    "release": "semantic-release"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.4.0",
    "@swingletree-oss/harness": "^1.1.0",
    "compression": "^1.7.4",
    "d3": "^5.14.2",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "js-yaml": "^3.13.1",
    "moment": "^2.24.0",
    "nconf": "^0.10.0",
    "node-cache": "^5.0.2",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.8",
    "@types/basic-auth": "^1.1.2",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.5",
    "@types/chai-things": "0.0.33",
    "@types/compression": "0.0.36",
    "@types/express": "^4.17.2",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/nconf": "^0.10.0",
    "@types/node": "^12.12.11",
    "@types/node-cache": "^4.2.5",
    "@types/nunjucks": "^3.1.3",
    "@types/redis": "^2.8.14",
    "@types/request": "^2.48.3",
    "@types/sinon": "^7.5.0",
    "bootstrap-scss": "^4.3.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "eslint": "^6.6.0",
    "mocha": "^6.2.2",
    "mockserver": "^3.1.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "semantic-release": "^15.13.31",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.2.1",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "license": "GPL-3.0",
  "private": true
}
